-if user_signed_in?
  %nav
    .container-fluid
      .row
        .col-md-3.left-nav
          %h1= link_to "AllChat", root_path, {:style=>'color:#000;', :class => "css_class"}
        .col-xs-5
          .search-field
            = render 'posts/search'
        .col-xs-4
          .right-nav
            %table
              %tr
                %th{:rowspan => "2"}
                  %figure
                    .avatar
                      -if current_user.avatar?
                        = image_tag current_user.avatar.url.to_s
                      -else
                        =image_tag("background/avatar", width: '70px')
                %td.name= link_to current_user.first_name, user_path(current_user)
              %tr
                %td
                  = button_to "Log out", destroy_user_session_path, method: :delete, class: "logout"
                  -# %button.logout{:type => "button"} Logout
