-if user_signed_in?
  %nav
    .container-fluid
      .row
        .col-md-3.left-nav
          %h1= link_to "AllChat", root_path, {:style=>'color:#000;', :class => "css_class"}
        .col-md-5.search-field
          = render 'posts/search'
        .col-md-4
          .right-nav
            %table
              %tr
                %th{:rowspan => "2"}
                  -if current_user.avatar?
                    = image_tag current_user.avatar.url(:thumb)
                  -else
                    =image_tag("background/avatar", width: '70px')
                %td.name= link_to current_user.first_name, user_path(current_user)
              %tr
                %td

                  = link_to "Log out", destroy_user_session_path, method: :delete
