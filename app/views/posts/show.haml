%main.container
  %article
    .post-info
      %span.author
        = link_to @post.user.first_name, user_path(@post.user)
      %span.time= @post.created_at.strftime('%A, %B %d')
    %p= @post.body
    / Редактиране на поста
    %span.post-buttons
      - if can? :destroy, @post
        = link_to "Delete", post_path(@post),
          method: :delete, data: { confirm: "Are you sure" }
    %span.post-buttons
      - if can? :update, @post
        = link_to "Edit", edit_post_path(@post)
  / Коментари
  %div
    =render @post.comments

    =render 'comments/form'
